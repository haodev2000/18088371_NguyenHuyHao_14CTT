<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1000">
       <KeyFrameSet>
       </KeyFrameSet>
        <OnClick motion:targetId="@+id/image_layout2" />
        <OnSwipe
            motion:touchAnchorId="@+id/image_layout2"
            motion:dragDirection="dragDown" />
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/imgXoay"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toBottomOf="@+id/view2"
            motion:layout_constraintHorizontal_bias="0.92"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="72dp"
            android:alpha="0" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:layout_height="wrap_content"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="28dp"
            motion:layout_constraintHorizontal_bias="0.047"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            motion:layout_constraintTop_toBottomOf="@+id/view2"
            android:id="@+id/txtNameSong" />
        <Constraint
            android:layout_height="68dp"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintHorizontal_bias="0.825"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="67dp"
            android:id="@+id/Play" />
        <Constraint
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toTopOf="@+id/next"
            motion:layout_constraintBottom_toBottomOf="@+id/next"
            android:layout_width="wrap_content"
            motion:layout_constraintVertical_bias="0.625"
            motion:layout_constraintStart_toEndOf="@+id/next"
            android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp"
            android:id="@+id/imageView12"
            android:alpha="0" />
        <Constraint
            android:layout_height="87dp"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="452dp"
            motion:layout_constraintHorizontal_bias="0.1"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="94dp"
            motion:layout_constraintTop_toBottomOf="@+id/view2"
            android:id="@+id/image_layout2" />
        <Constraint
            android:layout_height="21dp"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="368dp"
            motion:layout_constraintHorizontal_bias="0.97"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="172dp"
            motion:layout_constraintTop_toBottomOf="@+id/txtNameSinger"
            android:id="@+id/seekBar" />
        <Constraint
            android:id="@+id/imageView17"
            motion:layout_constraintEnd_toStartOf="@+id/prev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="@+id/prev"
            android:layout_marginEnd="32dp"
            motion:layout_constraintTop_toTopOf="@+id/prev"
            android:alpha="0" />
        <Constraint
            android:layout_marginEnd="16dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            motion:layout_constraintTop_toTopOf="@+id/Play"
            motion:layout_constraintBottom_toBottomOf="@+id/Play"
            android:layout_width="wrap_content"
            motion:layout_constraintEnd_toStartOf="@+id/Play"
            android:id="@+id/prev" />
        <Constraint
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toTopOf="@+id/Play"
            motion:layout_constraintBottom_toBottomOf="@+id/Play"
            android:layout_width="wrap_content"
            motion:layout_constraintVertical_bias="0.333"
            motion:layout_constraintStart_toEndOf="@+id/Play"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            android:id="@+id/next" />
    </ConstraintSet>
</MotionScene>